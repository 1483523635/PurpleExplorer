<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="200"
        x:Class="PurpleExplorer.Views.ConnectionStringWindow"
        xmlns:vm="clr-namespace:PurpleExplorer.ViewModels;assembly=PurpleExplorer"
        Title="ConnectionStringWindow">
    
    <Design.DataContext>
        <vm:ConnectionStringWindowViewModel />
    </Design.DataContext>
    
    <StackPanel>
        <TextBox Width="700" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding Path=ConnectionString, Mode=TwoWay}"></TextBox>
        <Button Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnSendClick">Connect to Service Bus</Button>
    </StackPanel>
</Window>
